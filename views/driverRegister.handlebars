                                                    <option value="tamilnadu">Tamilandu</option>
                                                    <option value="goa">Goa</option>
                                                </select>

                                            </div>
                                        </div>

                                        <div class="form-outline mb-3">
                                            <label class="form-label" for="form3Example9">City</label>
                                            <input type="text" id="form3Example9" name="city"
                                                class="form-control form-control-lg" required />
                                        </div>
                                        <div class="form-outline mb-3">
                                            <label class="form-label" for="form3Example99">Phone number</label>
                                            <input type="text" id="phone" name="phone"
                                                class="form-control form-control-lg" required>
                                            <span id="perr" style="color: red;display: block;"></span>

                                        </div>
                                         <div class="form-outline mb-3">
                                            <label class="form-label" for="form3Example99">Aadhar</label>
                                            <input type="text" id="aadhar" name="aadhar"
                                                class="form-control form-control-lg"  required>
{{!-- onfocusout="validateAadhar()" --}}
                                            <span id="perr" style="color: red;display: block;"></span>

                                        </div>

                                        <div class="form-outline mb-3">
                                            <label class="form-label" for="form3Example99">License Number</label>
                                            <input type="text" id="license" name="license"
                                                class="form-control form-control-lg" required>
                                            <span id="perr" style="color: red;display: block;"></span>

                                        </div>


                                        <div class="form-outline mb-3">
                                            <label class="form-label" for="form3Example99">Email ID</label>
                                            <input type="email" id="mail" name="email"
                                                class="form-control form-control-lg"
                                                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>
                                            <span id="e_span"></span>

                                        </div>

                                        <div class="form-outline mb-3">
                                            <label class="form-label" for="form3Example97">Password</label>
                                            <input type="password" id="pass" name="pass"
                                                class="form-control form-control-lg">


                                            {{!-- <input type="checkbox" onClick="myFunction()">Show Password --}}
                                            <span id="message" style="color:red"> </span>
                                            <br>
                                            <br>
                                            <div class="d-flex justify-content-end pt-3">
                                                <button type="button" class="btn btn-light btn-lg"
                                                    onclick="reset()">Reset all</button>
                                                <button type="submit" class="btn btn-primary btn-lg ms-2"
                                                    id="btn">Submit form</button>
                                                    
                                            </div>
                                        </div>
                                    </div>
                                     {{#if message}}
                                    <p class="text-danger">{{message}}</p>
                                    {{/if}}
                                   
